@model List<EmpleadoModel>

@{
    ViewData["Title"] = "Empleados";
    Layout = "~/Views/Shared/_Layout.cshtml";
}


<!DOCTYPE html>
<html >
<head>
    <link href="~/css/carga.css" rel="stylesheet" />
    <style>
        /* Oculta la primera columna en la tabla */
        #datatablesSimple th:first-child,
        #datatablesSimple td:first-child {
            display: none;
        }
    </style>
</head>
<body class="sb-nav-fixed" >

    <div id="layoutSidenav" >

        <div id="layoutSidenav_nav" >
            <nav class="sb-sidenav accordion sb-sidenav-dark" id="sidenavAccordion" >
                <div class="sb-sidenav-menu" style="background-color: #737373;">
                    <div class="nav">
                        <div class="sb-sidenav-menu-heading" style="color:white; background-color: #343a40  ">Secciones</div>
                        <a asp-controller="Home" asp-action="Index" class="nav-link" style="color:white">
                            <div class="sb-nav-link-icon"><i class="fas fa-solid fa-house" style="color:white"></i></div>
                            Index
                        </a>
                        <a asp-controller="Equipo" asp-action="EquipoLista" class="nav-link" style="color:white">
                            <div class="sb-nav-link-icon"><i class="fas fa-solid fa-laptop" style="color:white"></i></div>
                            Equipos
                        </a>
                        <a asp-controller="EquipoBaja" asp-action="EquipoBaja" class="nav-link" style="color:white">
                            <div class="sb-nav-link-icon"><i class="fas fa-solid fa-circle-xmark" style="color:white"></i></div>
                            Baja Equipos
                        </a>
                        <a asp-controller="Usuarios" asp-action="Listar" class="nav-link" style="color:white">
                            <div class="sb-nav-link-icon"><i class="fas fa-solid fa-circle-user" style="color:white"></i></div>
                            Usuarios
                        </a>
                        <a asp-controller="Empleado" asp-action="EmpleadoLista" class="nav-link" style="color:white">
                            <div class="sb-nav-link-icon"><i class="fas fa-users fa-fw" style="color:white"></i></div>
                            Empleados
                        </a>
                    </div>
                    
                </div>
                <div class="sb-sidenav-footer">
                    
                </div>
            </nav>
        </div>

        <div id="layoutSidenav_content" style="justify-content: flex-start;">

                <div class="preloader">
                    <div class="text-container">
                        <div class="letter" style="color: #7FA644;">G</div>
                        <div class="letter" style="color: #737373;">R</div>
                        <div class="letter" style="color: #A6BF6F;">U</div>
                        <div class="letter" style="color: #8C8C8C;">P</div>
                        <div class="letter" style="color: #7FA644;">A</div>
                        <div class="letter" style="color: #737373;">K</div>
                    </div>
                    <div class="circle-container">
                        <div class="circle" style="background-color: #7FA644;"></div>
                        <div class="circle" style="background-color: #737373;"></div>
                        <div class="circle" style="background-color: #A6BF6F;"></div>
                        <div class="circle" style="background-color: #8C8C8C;"></div>
                    </div>
                </div>

                <div class="container" style="margin-top:30px;">
                    <div class="row">
                        <div class="col">
                            <h3><i class="fas fa-users fa-fw"></i> @ViewBag.Title</h3>
                        </div>
                        <div class="col">
                        </div>
                        <div class="col" >
                            <div class="position-fixed bottom-0 end-0 p-3" style="z-index: 11" id="liveToastContainer">
                    
                            </div>

                        </div>
                    </div>
                </div>

                <div style="margin-bottom: 30px; margin-top:30px;"> <button type="button" class="btn" style="background-color:#A6BF6F; color:#FFFFFF;" data-mdb-ripple-init data-bs-toggle="modal" data-bs-target="#NuevoModal">Nuevo Empleado</button></div>
   

            <div class="container">
                <div class="container-fluid px-4">
                    <div class="card mb-4">
                        <div class="card-header">
                            <i class="fas fa-table me-1"></i>
                            Tabla Empleados
                        </div>
                        <div class="card-body">
                            <table id="datatablesSimple" class="table">
                                <thead>
                                    <tr>
                                        <th>Id</th>
                                        <th>Nombre</th>
                                        <th>Apellido Paterno</th>
                                        <th>Apellido Materno</th>
                                        <th>Tipo</th>
                                        <th>División</th>
                                        <th>Puesto</th>
                                        <th>Departamento</th>
                                        <th>Localidad</th>
                                        <th>Usuario</th>
                                        <th>Estatus</th>
                                        <th>Acceso Sistema</th>
                                        <th>Fecha Alta</th>
                                        <th>Usuario Alta</th>
                                        <th>Fecha Modificación </th>
                                        <th>Usuario Modificacion</th>
                                        <th>Fecha Baja</th>
                                        <th>Usuario Baja</th>
                                        <th>Editar</th>
                                    </tr>
                                </thead>
                                <tfoot>
                                    <tr>
                                        <th>Id</th>
                                        <th>Nombre</th>
                                        <th>Apellido Paterno</th>
                                        <th>Apellido Materno</th>
                                        <th>Tipo</th>
                                        <th>División</th>
                                        <th>Puesto</th>
                                        <th>Departamento</th>
                                        <th>Localidad</th>
                                        <th>Usuario</th>
                                        <th>Estatus</th>
                                        <th>Acceso Sistema</th>
                                        <th>Fecha Alta</th>
                                        <th>Usuario Alta</th>
                                        <th>Fecha Modificación </th>
                                        <th>Usuario Modificacion</th>
                                        <th>Fecha Baja</th>
                                        <th>Usuario Baja</th>
                                        <th>Editar</th>
                                    </tr>
                                </tfoot>
                                <tbody>
                                    @foreach (var item in Model)
                                    {
                                        <tr>
                                            <td>@item.Id_Empleado</td>
                                            <td>@item.Nombre</td>
                                            <td>@item.Apepaterno</td>
                                            <td>@item.Apematerno</td>
                                            <td>@item.Tipo</td>
                                            <td>@item.Division</td>
                                            <td>@item.Puesto</td>
                                            <td>@item.Departamento</td>
                                            <td>@item.Localidad</td>
                                            <td>@item.Usuario</td>
                                            <td>
                                                @if (item.Estatus == 1)
                                                {
                                                    <span style="background-color: #097117; color:white; border-radius:10px; padding: 1px 10px;">Activo</span>
                                                }
                                                else
                                                {
                                                    <span style="background-color:#CE0808; color:white; border-radius:10px; padding: 1px 10px;">Inactivo</span>
                                                }
                                            </td>
                                            <td>
                                                @if (item.Acceso == 1)
                                                {
                                                    <span style="background-color: #097117; color:white; border-radius:10px; padding: 1px 10px;">Permitido</span>
                                                }
                                                else
                                                {
                                                    <span style="background-color:#CE0808; color:white; border-radius:10px; padding: 1px 10px;">Denegado</span>
                                                }
                                            </td>
                                            <td>@item.Fecha_Alta</td>
                                            <td>@item.UsuarioAlta</td>
                                            <td>@item.Fecha_Modifica</td>
                                            <td>@item.Usuario_Modifica</td>
                                            <td>@item.Fecha_Baja</td>
                                            <td>@item.Usuario_Baja</td>
                                            <td>
                                                <button type="button" class="btn btn-success" data-mdb-ripple-init data-bs-toggle="modal" data-bs-target="#exampleModal" data-id="@item.Id_Empleado"><i class="fas fa-solid fa-pen-to-square"></i></button>
                                            </td>
                                        </tr>
                                    }
                                </tbody>
                            </table>
                        </div>
                    </div>
                </div>
            </div>

            <div class="modal fade" id="exampleModal" tabindex="-1" aria-labelledby="exampleModalLabel" aria-hidden="true">
                <div class="modal-dialog">
                    <div class="modal-content">
                        <div class="modal-header" style="background-color:#8C8C8C">
                            <h5 class="modal-title" id="exampleModalLabel">Editar Empleado</h5>
                            <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                        </div>
                        <div class="modal-body">
                            <!-- Contenido Modal -->
                            <div id="alertita2" style="margin-left: 0px;">
                                @*div alerta*@
                            </div>
                            <input type="hidden" id="IdUsuario"> <!-- Campo oculto para guardar el ID del usuario -->
                            <div class="form-floating mb-3">
                                <input type="text" class="form-control" id="Nombre" autocomplete="off">
                                <label for="floatingInput">Nombre</label>
                            </div>
                            <div class="form-floating mb-3">
                                <div class="row">
                                    <div class=" col form-floating mb-4">
                                        <input type="text" class="form-control" id="ApePaterno" autocomplete="off">
                                        <label for="floatingInput">Apellido Paterno</label>
                                    </div>
                                    <div class ="col form-floating mb-8">
                                        <input type="text" class="form-control" id="ApeMaterno" autocomplete="off">
                                        <label for ="floatingInput">Apellido Materno</label>
                                    </div>
                                </div>
                            </div>
                            <div class="form-floating mb-3">
                                <input type="text" class="form-control" id="Correo" autocomplete="off">
                                <label for="floatingInput">Correo</label>
                            </div>
                            <div class="form-floating mb-3">
                                <div class="row">
                                    <div class="col col-md-4">
                                        <select id="Division" class="form-select">
                                            <option  selected disabled>Division</option>
                                            @foreach (var opcion in ViewBag.Opciones)
                                            {
                                                <option value="@opcion.Id">@opcion.Nombre</option>
                                            }
                                        </select>
                                    </div>
                                    <div class="col col-md-8">
                                        <select id="Puesto" class="form-select">
                                            <option selected disabled>Puesto</option>
                                            @foreach (var puesto in ViewBag.Puesto)
                                            {
                                                <option value="@puesto.IdPuesto" data-segundo-identificador="@puesto.IdDepartamento">@puesto.Puesto</option>
                                            }
                                        </select>
                                    </div>
                                </div>
                            </div>
                            <div class="form-floating mb-3">
                                <div class="row">
                                    <div class="col col-md-8">
                                        <select id="Departamento" class="form-select" disabled>
                                            <option selected disabled>Departamento</option>
                                            @foreach (var departamento in ViewBag.Departamento)
                                            {
                                                <option value="@departamento.IdDepartamento">@departamento.Departamento</option>
                                            }
                                        </select>
                                    </div>
                                    <div class="col col-md-4">
                                        <select id="Localidad" class="form-select">
                                            <option selected disabled>Localidad</option>
                                            @foreach (var localidad in ViewBag.Localidad)
                                            {
                                                <option value="@localidad.IdLocalidad">@localidad.Localidad</option>
                                            }
                                        </select>
                                    </div>
                                </div>
                            </div>

                            <div class="form-floating mb-3">
                                <div class="row align-items-center">
                                    <div class="col-md-4 text-center">
                                        <select id="Tipo" class="form-select" disabled>
                                            <option selected disabled>Tipo</option>
                                            @foreach (var opcion in ViewBag.Tipo)
                                            {
                                                <option value="@opcion.IdTipo">@opcion.Tipo</option>
                                            }
                                        </select>
                                    </div>
                                    <div class="col-md-4 mb-3">
                                        <div class="form-check form-switch d-flex justify-content-center align-items-center">
                                            <input class="form-check-input" type="checkbox" id="Acceso">
                                            <label class="form-check-label" for="Acceso">Acceso</label>
                                        </div>
                                    </div>
                                    <div class="col-md-4 mb-3">
                                    
                                        <div class="form-check form-switch d-flex justify-content-center align-items-center">
                                            <input class="form-check-input" type="checkbox" id="flexSwitchCheckDefault">
                                            <label class="form-check-label" for="flexSwitchCheckDefault">  Estatus</label>
                                        </div>
                                       
                                    </div>
                                </div>
                            </div>


                        
                        </div>
                        <div class="modal-footer">
                            <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cerrar</button>
                            <button type="button" class="btn" style="background-color:#A6BF6F" id="btnGuardarCambios">Guardar cambios</button>
                        </div>
                    </div>
                </div>
            </div>

            <!-- Modal Insertar -->

            <div class="modal fade" id="NuevoModal" tabindex="-1" aria-labelledby="NuevoModal" aria-hidden="true">
                <div class="modal-dialog">
                    <div class="modal-content">
                        <div class="modal-header" style="background-color:#8C8C8C">
                            <h5 class="modal-title" id="exampleModalLabel">Nuevo Empleado</h5>
                            <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                        </div>
                        <div class="modal-body">
                            <!-- Contenido Modal -->
                            <div id="alertita" style="margin-left: 0px;"> @*div alerta*@
                            </div>
                            <div class="form-floating mb-3">
                                <input type="text" class="form-control" id="NombreN" required autocomplete="off">
                                <label for="floatingInput">Nombre</label>
                            </div>
                            <div class="form-floating mb-3">
                                <div class="row">
                                    <div class=" col form-floating mb-4">
                                        <input type="text" class="form-control" id="ApePaternoN" required autocomplete="off">
                                        <label for="floatingInput">Apellido Paterno</label>
                                    </div>
                                    <div class="col form-floating mb-8">
                                        <input type="text" class="form-control" id="ApeMaternoN" required autocomplete="off">
                                        <label for="floatingInput">Apellido Materno</label>
                                    </div>
                                </div>
                            </div>
                            <div class="form-floating mb-3">
                                <div class="row">
                                    <div class="col col-md-4">
                                        <select id="DivisionN" class="form-select" required>
                                            <option selected disabled>Division</option>
                                            @foreach (var opcion in ViewBag.Opciones)
                                            {
                                                <option value="@opcion.Id">@opcion.Nombre</option>
                                            }
                                        </select>
                                    </div>
                                    <div class="col col-md-8">
                                        <select id="PuestoN" class="form-select" required>
                                           <option selected disabled>Puesto</option>
                                            @foreach (var puesto in ViewBag.Puesto)
                                            {
                                                <option value="@puesto.IdPuesto" data-segundo-identificador="@puesto.IdDepartamento">@puesto.Puesto</option>
                                            }
                                        </select>
                                    </div>
                                </div>
                            </div>
                            <div class="form-floating mb-3">
                                <div class="row">
                                    <div class="col col-md-8">
                                        <select id="DepartamentoN" class="form-select" disabled>
                                            <option selected disabled>Departamento</option>
                                            @foreach (var departamento in ViewBag.Departamento)
                                            {
                                                <option value="@departamento.IdDepartamento">@departamento.Departamento</option>
                                            }
                                        </select>
                                    </div>
                                    <div class="col col-md-4">
                                        <select id="LocalidadN" class="form-select" required>
                                            <option selected disabled>Localidad</option>
                                            @foreach (var localidad in ViewBag.Localidad)
                                            {
                                                <option value="@localidad.IdLocalidad">@localidad.Localidad</option>
                                            }
                                        </select>
                                    </div>
                                </div>
                            </div>
                            <div class="form-floating mb-3">
                                <div class="row">
                                    <div class="col-md-4 mb-3">
                                        <select id="TipoN" class="form-select">
                                            <option selected disabled>Tipo</option>
                                            @foreach (var opcion in ViewBag.Tipo)
                                            {
                                                <option value="@opcion.IdTipo">@opcion.Tipo</option>
                                            }
                                        </select>
                                    </div>
                                    <div class="col-md-4 mb-3">
                                        <div class="form-check form-switch d-flex justify-content-center align-items-center">
                                            <input class="form-check-input" type="checkbox" id="AccesoN"  checked>
                                            <label class="form-check-label" for="AccesoN">Acceso</label>
                                        </div>
                                    </div>
                                    <div class="col-md-4 mb-3">
                                        <div class="form-check form-switch d-flex justify-content-center align-items-center">
                                            <input class="form-check-input" type="checkbox" id="flexSwitchCheckDefaultN" disabled checked>
                                            <label class="form-check-label" for="flexSwitchCheckDefaultN">Estatus</label>
                                        </div>
                                    </div>
                                </div>
                            </div>

                           @* <input class="form-check-input" type="checkbox" id="AccesoN" checked>
                            <label class="form-check-label" for="AcessoN">  Acceso</label>*@
                            <!-- Fin contenido Modal -->
                        </div>
                        <div class="modal-footer">
                        
                            <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cerrar</button>
                            <button type="button" class="btn" style="background-color:#A6BF6F" id="btnGuardarCambiosN">Guardar cambios</button>

                        </div>
                    </div>
                
                </div>
            </div>
        </div>
    </div>


   
    <script src="~/js/empleado.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.2.3/dist/js/bootstrap.bundle.min.js" crossorigin="anonymous"></script>
    <script src="js/scripts.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/simple-datatables@7.1.2/dist/umd/simple-datatables.min.js" crossorigin="anonymous"></script>
    <script src="~/js/datatables-simple-demo.js"></script>
    <script src="https://code.jquery.com/jquery-3.7.1.js"
            integrity="sha256-eKhayi8LEQwp4NKxN+CfCh+3qOVUtJn3QNZ0TciWLP4="
            crossorigin="anonymous"></script>
    
</body>
</html>